<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>InicioSesion</servlet-name>
        <servlet-class>Controller.InicioSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarUsuario</servlet-name>
        <servlet-class>Controller.RegistrarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InactivarUsuario</servlet-name>
        <servlet-class>Controller.InactivarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SeleccionarRol</servlet-name>
        <servlet-class>Controller.SeleccionarRol</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminActivaNick</servlet-name>
        <servlet-class>Controller.AdminActivaNick</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarActivaNick</servlet-name>
        <servlet-class>Controller.UsuarActivaNick</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InicioSesion</servlet-name>
        <url-pattern>/Iniciar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarUsuario</servlet-name>
        <url-pattern>/usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InactivarUsuario</servlet-name>
        <url-pattern>/inactivar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SeleccionarRol</servlet-name>
        <url-pattern>/rol</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminActivaNick</servlet-name>
        <url-pattern>/AdminActiva</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarActivaNick</servlet-name>
        <url-pattern>/UsuarActiva</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
